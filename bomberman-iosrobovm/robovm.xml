<config>
  <executableName>${app.executable}</executableName>
  <mainClass>${app.mainclass}</mainClass>
  <os>ios</os>
  <arch>thumbv7</arch>
  <resources>
    <resource>
      <directory>../desktop/assets</directory>
      <includes>
        <include>**</include>
      </includes>
      <skipPngCrush>true</skipPngCrush>
    </resource>  
    <resource>
      <directory>resources</directory>
    </resource>
  </resources>
  <forceLinkClasses>
    <pattern>com.badlogic.gdx.scenes.scene2d.ui.*</pattern>
        <pattern>net.peakgames.mobile.core.ui.widget.*</pattern>
        <pattern>org.kxml2.io.KXmlSerializer</pattern>
        <pattern>org.apache.harmony.**.*</pattern>
        <pattern>com.android.org.bouncycastle.jce.provider.BouncyCastleProvider</pattern>
        <pattern>com.android.org.bouncycastle.jce.provider.JCEMac$SHA1</pattern>
  </forceLinkClasses>
  <libs>
    <lib>libs/ios/libgdx.a</lib>
    <lib>libs/ios/libObjectAL.a</lib>
  </libs>    
  <target>ios</target>
  <iosInfoPList>Info.plist.xml</iosInfoPList>
  <frameworks>
    <framework>UIKit</framework>
    <framework>OpenGLES</framework>
    <framework>QuartzCore</framework>
    <framework>CoreGraphics</framework>
    <framework>OpenAL</framework>
    <framework>AudioToolbox</framework>
    <framework>AVFoundation</framework>
  </frameworks>  
</config>