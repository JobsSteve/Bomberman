<?xml version="1.0" encoding="UTF-8"?>
<group>

    <group name="labyrinth"></group>
    <image name="sunshine" atlas="Common.atlas" frame="sunshine"  x="0" y="0" visible="false" />
    <group name="gameObjectsGroup"></group>

    <button name="settingsButton" atlas="Common.atlas" x="0" y="0"  frameUp="settingIcon" frameDown="settingIconH" visible="false"/>


    <group name="settingsPanel" visible="false" x="200" y="120" width="400" height="240">
        <image name="panelBackground" atlas="Common.atlas" frame="panelBackground"  x="0" y="0" width="400" height="240" ninepatch="true" ninepatchOffset="6"/>
        <label name="title" text="SETTINGS" x="0" y="200" width="400" align="center" fontName="large.fnt" fontColor="000000" wrap="true"/>
        <textButton name="settingsGamePad" atlas="Common.atlas" text="GAME PAD" x="104" y="100" frameUp="btnEmpty" frameDown="btnEmpty_H" fontName="normal.fnt" fontColor="ffffff"/>
        <textButton name="settingsSwipe" atlas="Common.atlas" text="SWIPE" x="104" y="50" frameUp="btnEmpty" frameDown="btnEmpty_H" fontName="normal.fnt" fontColor="ffffff"/>
    </group>

    <group name="player1stats">
        <label name="name"  text="P1" x="0" y="0" width="38" height="38" align="center" fontName="pixelfont_26.fnt" fontColor="006E2E"/>
        <label name="life"  text="3"  x="0" y="0" width="38" height="38" align="center" fontName="pixelfont_26.fnt" fontColor="006E2E"/>
    </group>
    <group name="player2stats">
        <label name="name"  text="P2" x="0" y="0" width="38" height="38" align="center" fontName="pixelfont_26.fnt" fontColor="CC0000"/>
        <label name="life"  text="3"  x="0" y="0" width="38" height="38" align="center" fontName="pixelfont_26.fnt" fontColor="CC0000"/>
    </group>
    <group name="player3stats">
        <label name="name"  text="P3" x="0" y="0" width="38" height="38" align="center" fontName="pixelfont_26.fnt" fontColor="36393D"/>
        <label name="life"  text="3"  x="0" y="0" width="38" height="38" align="center" fontName="pixelfont_26.fnt" fontColor="36393D"/>
    </group>
    <group name="player4stats">
        <label name="name"  text="P4" x="0" y="0" width="38" height="38" align="center" fontName="pixelfont_26.fnt" fontColor="356AA0"/>
        <label name="life"  text="3"  x="0" y="0" width="38" height="38" align="center" fontName="pixelfont_26.fnt" fontColor="356AA0"/>
    </group>

    <group name="gamePad" x="0" y="0">
        <button name="gamePadUpButton" x="50" y="85" atlas="Common.atlas" frameUp="gamePadUp" frameDown="gamePadUpH"/>
        <button name="gamePadDownButton" x="50" y="0" atlas="Common.atlas" frameUp="gamePadDown" frameDown="gamePadDownH"/>
        <button name="gamePadRightButton" x="85" y="50" atlas="Common.atlas" frameUp="gamePadRight" frameDown="gamePadRightH"/>
        <button name="gamePadLeftButton" x="0" y="50" atlas="Common.atlas" frameUp="gamePadLeft" frameDown="gamePadLeftH"/>
    </group>

    <button name="bombButton" x="690" y="10" atlas="Common.atlas" frameUp="bombButton" frameDown="bombButton"/>

    <group name="beforeGamePanel" visible="true" x="200" y="120" width="400" height="240">
        <image name="panelBackground" atlas="Common.atlas" frame="panelBackground"  x="0" y="0" width="400" height="240" ninepatch="true" ninepatchOffset="6"/>
        <label name="title" text="" x="0" y="200" width="400" align="center" fontName="large.fnt" fontColor="000000" wrap="true"/>
        <label name="roomOwner" text="" x="0" y="160" width="400" align="center" fontName="normal.fnt" fontColor="000000" visible="false"/>
        <label name="player2joined" text="" x="0" y="140" width="400" align="center" fontName="normal.fnt" fontColor="000000" visible="false"/>
        <label name="player3joined" text="" x="0" y="120" width="400" align="center" fontName="normal.fnt" fontColor="000000" visible="false"/>
        <label name="player4joined" text="" x="0" y="100"  width="400" align="center" fontName="normal.fnt" fontColor="000000" visible="false"/>
        <textButton name="startGameButton" atlas="Common.atlas" text="START GAME" x="104" y="20" frameUp="btnEmpty" frameDown="btnEmpty_H" fontName="normal.fnt" fontColor="ffffff" visible="false"/>
        <label name="roomName" text="" x="0" y="10" width="400" align="center" fontName="small.fnt" fontColor="000000" visible="true"/>
    </group>

    <group name="disconnectPopup" visible="false" x="200" y="120" width="400" height="240">
        <image name="panelBackground" atlas="Common.atlas" frame="panelBackground"  x="0" y="0" width="400" height="240" ninepatch="true" ninepatchOffset="6"/>
        <label name="title" text="DISCONNECTED" x="0" y="200" width="400" align="center" fontName="large.fnt" fontColor="000000" wrap="true"/>
        <textButton name="backToLobbyButton" atlas="Common.atlas" text="BACK TO LOBBY" x="104" y="50" frameUp="btnEmpty" frameDown="btnEmpty_H" fontName="normal.fnt" fontColor="ffffff"/>
    </group>


    <group name="ownerLeftPopup" visible="false" x="200" y="120" width="400" height="240">
        <image name="panelBackground" atlas="Common.atlas" frame="panelBackground"  x="0" y="0" width="400" height="240" ninepatch="true" ninepatchOffset="6"/>
        <label name="title" text="OWNER LEFT ROOM" x="0" y="200" width="400" align="center" fontName="large.fnt" fontColor="000000" wrap="true"/>
        <textButton name="backToLobbyButton" atlas="Common.atlas" text="BACK TO LOBBY" x="104" y="50" frameUp="btnEmpty" frameDown="btnEmpty_H" fontName="normal.fnt" fontColor="ffffff"/>
    </group>


    <group name="lostGamePopup" visible="false" x="200" y="120" width="400" height="240">
        <image name="panelBackground" atlas="Common.atlas" frame="panelBackground"  x="0" y="0" width="400" height="240" ninepatch="true" ninepatchOffset="6"/>
        <label name="title" text="YOU LOST!" x="0" y="200" width="400" align="center" fontName="large.fnt" fontColor="000000" wrap="true"/>
        <image name="lostImage" atlas="Common.atlas" frame="bomberman_lost"  x="130" y="40"/>
        <textButton name="backToLobbyButton" atlas="Common.atlas" text="BACK TO LOBBY" x="104" y="20" frameUp="btnEmpty" frameDown="btnEmpty_H" fontName="normal.fnt" fontColor="ffffff"/>
    </group>

    <group name="winGamePopup" visible="false" x="200" y="120" width="400" height="240">
        <image name="panelBackground" atlas="Common.atlas" frame="panelBackground"  x="0" y="0" width="400" height="240" ninepatch="true" ninepatchOffset="6"/>
        <label name="title" text="YOU WIN!" x="0" y="210" width="400" align="center" fontName="large.fnt" fontColor="000000" wrap="true"/>
        <image name="lostImage" atlas="Common.atlas" frame="bomberman_win"  x="100" y="45"/>
        <textButton name="backToLobbyButton" atlas="Common.atlas" text="BACK TO LOBBY" x="104" y="10" frameUp="btnEmpty" frameDown="btnEmpty_H" fontName="normal.fnt" fontColor="ffffff"/>
    </group>

    <image name="rip1" atlas="Common.atlas" frame="rip"  x="0" y="0" visible="false" />
    <image name="rip2" atlas="Common.atlas" frame="rip"  x="0" y="0" visible="false" />
    <image name="rip3" atlas="Common.atlas" frame="rip"  x="0" y="0" visible="false" />
